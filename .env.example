# Vercel Postgres (add via Vercel dashboard → Storage → Create Database → copy connection string)
POSTGRES_URL=

# WalletConnect Project ID (get free at cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Gateway signing key — generate a dedicated key with: cast wallet new
# This is the PRIVATE KEY used to sign CCIP-Read responses
GATEWAY_SIGNING_KEY=

# Public address of the signing key above (put this in the OffchainResolver constructor)
GATEWAY_SIGNER_ADDRESS=

# Resolver contract address (fill in after deploying OffchainResolver.sol to Ethereum mainnet)
RESOLVER_CONTRACT_ADDRESS=

# Bankr Partner API key (contact @0xDeployer on X/Farcaster to get one)
# Without a real key, token launches run in simulateOnly mode (safe default — no real tokens)
BANKR_PARTNER_KEY=pending

# Your deployed gateway URL (for CCIP-Read — must be publicly accessible)
NEXT_PUBLIC_GATEWAY_URL=https://bankrclub-ens.vercel.app

# Optional: allow DB init endpoint in production (set to "true" for one-time init)
# ALLOW_DB_INIT=true

# IPFS/ENS static export (set to "true" when running deploy-ipfs.sh)
NEXT_PUBLIC_IPFS_BUILD=false

# API base URL for IPFS build — frontend calls this for /api/check and /api/claim
# (Vercel deployment URL; leave empty for normal Vercel deploys)
NEXT_PUBLIC_API_URL=https://bankrclub-ens.vercel.app
